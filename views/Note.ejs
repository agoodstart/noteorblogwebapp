
<form class="AJAXForm" method="POST" name="<%= typeof noteTitle != 'undefined' ? noteTitle : '' %>">
<div class="form-group">
    <label for="noteTitle"></label>
    <input type="text" id="<%= typeof _id != 'undefined' ? _id : 'placeholderTitle' %>" name="noteTitle" placeholder="Title" class="form-control" value="<%= typeof noteTitle != 'undefined' ? noteTitle : '' %>" />
</div>

<div class="form-group">
    <label for="noteBody"></label>
    <textarea rows="5" cols="30" id="<%= typeof _id != 'undefined' ? _id : 'placeholderBody' %>" name="noteBody" placeholder="Body"><%= typeof noteBody != 'undefined' ? noteBody : '' %></textarea>
</div>
<%# how I change the requestheader %> 
<% if (URL == "/note/create" && typeof _id == 'undefined') { %>
    <button type="submit" formmethod="POST" formaction="/note/create" class="btn btn-primary brtn-block">Save note</button>
    <a href="/dashboard" class="btn btn-secondary btn-block">Back to dashboard</a>
<% } %>


<% if (URL == "/note/" && typeof _id != 'undefined') { %>
    <button type="submit" formaction="/note/<%= _id %>?_method=PUT" class="btn btn-primary brtn-block">Update</button>
    <button type="submit" formaction="/note/<%= _id %>?_method=DELETE" class="btn btn-primary brtn-block">Delete</button>
    <a href="/dashboard" class="btn btn-secondary btn-block">Back to dashboard</a>
<% } %> 
    
<% if (URL == "/dashboard/note/" && typeof _id != 'undefined') {%>
    <button type="submit" class="AJAXUpdate btn btn-primary brtn-block">Update</button>
    <button type="submit" formaction="/dashboard/note/<%= _id %>?_method=DELETE" class="btn btn-primary brtn-block">Delete</button>
<% } %>

</form>  