<h1> <% include ./partials/messages %> </h1>

<form action="/users/login" method="POST">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : '' %>" class="form-control">
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Create password" value="<%= typeof password != 'undefined' ? password : '' %>" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary brtn-block">Login</button>
</form>

<h4>No account yet? <a href="/users/register">Register</a></h4>

