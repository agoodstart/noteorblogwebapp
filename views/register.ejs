<% include ./partials/messages %> 

<form action="/users/register" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="name" id="name" name="name" placeholder="Enter name" value="<%= typeof name != 'undefined' ? name : '' %>" class="form-control">
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : '' %>" class="form-control">
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Create password" value="<%= typeof password != 'undefined' ? password : '' %>" class="form-control">
    </div>

    <div class="form-group">
        <label for="password2">Confirm password</label>
        <input type="password" id="password2" name="password2" placeholder="Confirm password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary brtn-block">Register</button>
</form>
<h4>Already have an account? <a href="/users/login">Login</a></h4>